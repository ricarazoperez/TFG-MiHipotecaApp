<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_aplicacion"
    tools:context=".UsuarioRegistrado.InformacionUsuario.ModificarDatosUsuario">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/close_icon_mod_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/close_icon" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/text_bold"
            android:textColor="@color/titulo2"
            android:shadowColor="@color/dark_blue"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:scaleType="centerCrop"
            android:text="@string/label_modificar_perfil"
            android:textSize="36sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/correo_electronico_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:text="correo_electronico"
            android:textColor="@color/text_color"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imagenPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/circulo_fondo"
            android:padding="5dp"
            android:backgroundTint="@color/titulo2"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />


        <ImageView
            android:id="@+id/btn_mod_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="-24dp"
            android:background="@drawable/circulo_morado"
            android:backgroundTint="@color/titulo"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lapiz_editar"
            app:tint="@color/titulo2"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/allerta"
            android:text="@string/label_nombre"
            android:textColor="@color/text_color"
            android:layout_gravity="center"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edit_nuevo_nombre_registro"
            android:layout_width="300dp"
            android:layout_height="48sp"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:hint="Nombre"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/allerta"
            android:textColor="@color/text_color"
            android:text="@string/label_contrasenia_nueva"
            android:layout_gravity="center"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edit_contra_registro"
            android:layout_width="300dp"
            android:layout_height="48sp"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:hint="@string/label_ejemplo_contrasenia"
            android:inputType="textPassword"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/allerta"
            android:text="@string/label_repetir_contrasenia_nueva"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/edit_repetir_contra_registro"
            android:layout_width="300dp"
            android:layout_height="48sp"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:hint="@string/label_ejemplo_contrasenia"
            android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginHorizontal="18dp"
                android:layout_marginBottom="15dp">

                <Button
                    android:id="@+id/btn_pasar_a_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bordes_redondos"
                    android:text="@string/txt_btn_pasar_a_premium"
                    tools:layout_editor_absoluteX="80dp"
                    tools:layout_editor_absoluteY="596dp" />

                <Button
                    android:id="@+id/btn_aplicar_cambios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bordes_redondos"
                    android:text="@string/txt_btn_aplicar_cambios" />

            </LinearLayout>

        </LinearLayout>

</ScrollView>