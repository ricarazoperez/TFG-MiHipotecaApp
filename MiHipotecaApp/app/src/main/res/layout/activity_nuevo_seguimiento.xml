            android:text="@string/label_check_parte_fija_mixta"
            android:checked="false"/>

        <TextView
            android:id="@+id/label_duracion_primer_porcentaje_variable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_duracion_primer_porcentaje"
            android:layout_marginStart="16dp"
            android:textColor="@color/text_color"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:textSize="16sp"/>

        <EditText

            android:id="@+id/edit_duracion_primer_porcentaje_variable"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:layout_marginStart="16dp"
            android:hint="Duración en meses"
            android:inputType="number"
            android:textColor="@color/black"
            android:visibility="gone"
            android:text="" />

        <TextView
            android:id="@+id/label_primer_porcentaje_variable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_primer_porcentaje_variable"
            android:layout_marginStart="16dp"
            android:textColor="@color/text_color"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:textSize="16sp"/>

        <EditText

            android:id="@+id/edit_primer_porcentaje_variable"
            android:layout_width="300dp"
            android:layout_height="48dp"
