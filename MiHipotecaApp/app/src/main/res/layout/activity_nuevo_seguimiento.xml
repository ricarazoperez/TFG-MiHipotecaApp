            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:textSize="16sp"/>

        <EditText

            android:id="@+id/edit_porcentaje_diferencial_variable"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:hint="Diferencial"
            android:inputType="numberDecimal"
            android:visibility="gone"
            android:text="" />

        <TextView
            android:id="@+id/label_cada_cuanto_revision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/text_color"
            android:textAlignment="center"
            android:visibility="gone"
            android:text="@string/label_cada_cuanto_revision"
            android:textSize="20sp"/>

        <CheckBox
            android:id="@+id/checkBox_revision_seis_meses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textColor="@color/grey_color"
            android:layout_marginStart="48dp"
            android:visibility="gone"
            android:text="@string/label_seis_meses"/>

        <CheckBox
            android:id="@+id/checkBox_revision_un_anio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginStart="48dp"
            android:textColor="@color/grey_color"
            android:visibility="gone"
            android:text="@string/label_un_anio" />

        <!-- FIN CAMPOS PARA HIPOTECA FIJA -->

        <!-- CAMPOS PARA HIPOTECA MIXTA -->

        <TextView
            android:id="@+id/label_cuantos_anios_fijo_mixta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"
            android:visibility="gone"
            android:text="@string/label_cuantos_anios_fijo"
            android:textSize="20sp"/>

        <EditText

            android:id="@+id/edit_anios_fijos_mixta"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:layout_marginStart="16dp"
            android:hint="Años fijos"
            android:textColor="@color/black"
            android:inputType="number"
            android:visibility="gone"
            android:text="" />

        <TextView
            android:id="@+id/label_porcentaje_fijo_mixta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_porcentaje_fijo"
