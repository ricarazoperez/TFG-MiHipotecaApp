            android:fontFamily="@font/allerta"
            android:inputType="numberDecimal"
            android:text="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_gestoria"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:layout_marginTop="20dp"
            android:textSize="16sp"/>

        <EditText

            android:id="@+id/edit_gastos_gestoria"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:inputType="numberDecimal"
            android:text="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_tasacion"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:layout_marginTop="20dp"
            android:textSize="16sp"/>

        <EditText

            android:id="@+id/edit_gastos_tasacion"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:inputType="numberDecimal"
            android:text="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_comisiones"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:layout_marginTop="20dp"
            android:textSize="16sp"/>

        <EditText

            android:id="@+id/edit_comisiones"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:inputType="numberDecimal"
            android:text="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_gastos_vinculaciones"
