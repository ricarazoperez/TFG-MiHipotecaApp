        android:textColor="@color/titulo2"
        android:shadowColor="@color/dark_blue"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/label_nuevo_seguimiento"
        android:textSize="42sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_gravity="center"
            android:textColor="@color/text_color"
            android:textAlignment="center"
            android:layout_marginHorizontal="8dp"
            android:text="@string/label_combobox_comunidad"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/sp_comunidad"
            android:layout_width="297dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/color_btn"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_banco"
            android:textColor="@color/text_color"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"/>
        <Spinner
            android:id="@+id/sp_banco_nuevo_seg"
            android:layout_width="297dp"
            android:backgroundTint="@color/color_btn"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/text_color"
            android:textAlignment="center"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="10dp"
            android:text="@string/label_tipo_vivienda"
            android:textSize="20sp"/>

        <CheckBox
            android:id="@+id/checkBox_ViviendaRegGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_color"
            android:layout_marginStart="54dp"
            android:text="@string/label_vivienda_regimen_general"
            android:checked="true" />

        <CheckBox
            android:id="@+id/checkBox_ViviendaPOficial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_color"
            android:layout_marginStart="54dp"
            android:checked="false"
            android:text="@string/label_vivienda_proteccion_oficial" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textColor="@color/text_color"
            android:textAlignment="center"
            android:text="@string/label_antiguedad_vivienda"
            android:textSize="20sp"/>

        <CheckBox
            android:id="@+id/checkBox_ViviendaNueva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_color"
            android:layout_marginStart="48dp"
            android:text="@string/label_vivienda_nueva"
            android:checked="true" />

    <CheckBox
        android:id="@+id/checkBox_ViviendaSegundaMano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_color"
        android:layout_marginStart="48dp"
        android:checked="false"
        android:text="@string/label_vivienda_segunda_mano" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_color"
            android:layout_gravity="center"
            android:text="@string/label_precio_vivienda"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_precio_vivienda"
            android:layout_width="300dp"
            android:layout_height="48sp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:hint="Ej: 300.000 "
            android:textColor="@color/black"
            android:inputType="number|numberDecimal"
            android:layout_gravity="center"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:text="@string/label_cantidad_abonada"
            android:textColor="@color/text_color"
            android:layout_marginHorizontal="8dp"
            android:textSize="20dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edit_cant_abonada_comprador"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:hint="Ej: 70.000"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:inputType="numberDecimal"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:text="@string/label_plazo_prestamo_a_pagar"
            android:textColor="@color/text_color"
            android:layout_marginHorizontal="8dp"
            android:textSize="20sp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edit_plazo_pagar"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:hint="Ej: 30 "
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:inputType="number"
            android:text="" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/label_fecha_inicio_hipoteca"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:layout_marginHorizontal="8dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />


        <EditText
