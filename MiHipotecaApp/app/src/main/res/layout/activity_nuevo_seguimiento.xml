        <!-- CAMPOS PARA HIPOTECA VARIABLE -->

        <CheckBox
            android:id="@+id/check_parte_fija_variable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
