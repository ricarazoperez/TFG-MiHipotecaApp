            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="16sp"/>

        <EditText

            android:id="@+id/edit_porcentaje_fijo_mixta"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:layout_marginStart="16dp"
            android:hint="Porcentaje fijo"
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:visibility="gone"
            android:text="" />

        <TextView
            android:id="@+id/label_diferencial_mixta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_porcentaje_variable_diferencial"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"
            android:visibility="gone"
            android:textSize="16sp"/>

        <EditText

            android:id="@+id/edit_porcentaje_diferencial_mixta"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:layout_marginStart="16dp"
            android:hint="Diferencial"
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:visibility="gone"
            android:text=""/>

        <!-- FIN CAMPOS PARA HIPOTECA MIXTA
