                android:layout_height="wrap_content"
                android:textColor="@color/grey_color"
                android:text="@string/label_hipoteca_mixta"
                android:layout_weight="1"
                android:checked="false"/>

        </LinearLayout>

        <!-- CAMPOS PARA HIPOTECA FIJA -->

