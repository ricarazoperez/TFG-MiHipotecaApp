<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Registro"
    android:background="@color/background_aplicacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/text_bold"
            android:textColor="@color/titulo2"
            android:shadowColor="@color/dark_blue"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:text="@string/label_registro"
            android:layout_marginBottom="28dp"
            android:textSize="40sp"/>



        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/allerta"
            android:text="@string/label_correo_electronico"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edit_correo_registro"
            android:layout_width="300dp"
            android:layout_height="48sp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:hint="@string/label_ejemplo_correo"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/allerta"
            android:text="@string/label_nombre"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edit_nombre_registro"
            android:layout_width="300dp"
            android:layout_height="48sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:text=""
            android:textColor="@color/black"
            android:inputType="text" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/allerta"
            android:textColor="@color/text_color"
            android:text="@string/label_contrasenia"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edit_contra_registro"
            android:layout_width="300dp"
            android:layout_height="48sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:hint="@string/label_ejemplo_contrasenia"
            android:textColor="@color/black"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/allerta"
            android:text="@string/label_repetir_contrasenia"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_contra_registro" />

        <EditText
            android:id="@+id/edit_repetir_contra_registro"
            android:layout_width="300dp"
            android:layout_height="48sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/allerta"
            android:hint="@string/label_ejemplo_contrasenia"
            android:textColor="@color/black"
            android:inputType="textPassword" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:layout_gravity="center"
            android:textColor="@color/text_color"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:text="@string/label_selecciona_avatar"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/avatar1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/avatar2"
                android:layout_marginStart="5dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/avatar3"
                android:layout_marginStart="5dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/avatar4"
                android:layout_marginStart="5dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar5"
                android:layout_marginStart="5dp"/>

        </LinearLayout>



        <RadioGroup
            android:id="@+id/grupo_avatar_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <RadioButton
                android:id="@+id/avatar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />


            <RadioButton
                android:id="@+id/avatar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:checked="false" />

            <RadioButton
                android:id="@+id/avatar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginStart="25dp"/>

            <RadioButton
                android:id="@+id/avatar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginStart="25dp"/>

            <RadioButton
                android:id="@+id/avatar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_marginStart="25dp"/>

        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/link_abrir_terminos_condiciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_btn"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/allerta"
                android:text="@string/label_acepto_terminos"
                android:layout_weight="1"
                android:textSize="18sp" />
            <CheckBox

                android:id="@+id/terminos_registro"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:layout_marginTop="32dp"
            android:id="@+id/btn_registrarse"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/text_bold"
            android:background="@drawable/btn_bordes_redondos"
            android:text="@string/txt_btn_registrarse"/>

    </LinearLayout>
</ScrollView>