            android:fontFamily="@font/allerta"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:text="No hay amortizaciones anticipadas"
            android:textSize="18sp" />
        
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarThumbHorizontal="@color/gris_oscuro"
            android:layout_marginBottom="20dp">

            <TableLayout
                android:id="@+id/tabla_seg_amortizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:stretchColumns="*"
                android:background="@color/white"
                android:visibility="invisible">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta"
                        android:text="Nº Cuota"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta"
                        android:padding="7dp"
                        android:text="Tipo"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta"
                        android:padding="10dp"
                        android:text="Capital amortizado"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta"
                        android:text="Meses reducidos"
                        android:textAlignment="center"
                        android:padding="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/allerta"
                        android:text="Comisión Total"
                        android:textAlignment="center"
                        android:padding="10dp"/>

                </TableRow>

            </TableLayout>
        </HorizontalScrollView>
        


    </LinearLayout>

