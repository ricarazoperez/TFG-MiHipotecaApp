<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/transparent">

    <LinearLayout

        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/btn_bordes_redondos2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <!-- Título -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="¡Pásate a Premium!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center" />

                <!-- Botón "x" -->
                <ImageButton
                    android:id="@+id/dialog_close_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/close_icon"
                    android:background="@android:color/transparent"
                    android:layout_gravity="end"
                    android:contentDescription="Cerrar" />

            </LinearLayout>

            <!-- Subtítulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Vaya, parece que no eres premium aún. \n¿Quieres disfrutar de todas las funcionalidades extras?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <!-- Botón "Pasate a premium" -->
            <Button
                android:id="@+id/dialog_premium_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Pásate a premium"
                android:textSize="16sp"
                android:background="@drawable/btn_bordes_redondos"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>